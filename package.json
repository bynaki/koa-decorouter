{
  "name": "typescript.boilerplate",
  "version": "0.1.0",
  "description": "typescript poilerpalte",
  "main": "dist/app.js",
  "author": {
    "name": "bynaki",
    "email": "bynaki@icloud.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bynaki/typescript.boilerplate.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "node .",
    "build": "tsc && bin/copy \"src/**/!(*.ts)\" \"dist\"",
    "build.parcel": "parcel build --target=node src/app.ts && bin/copy \"src/**/!(*.ts)\" \"dist\"",
    "clean": "rimraf dist",
    "archive": "tar cvfz archive.tar.gz dist/ package.json",
    "release": "npm run clean && npm run build.parcel && npm run archive && bin/release",
    "build.util": "tsc --outDir utils utils/index.ts",
    "build.test": "tsc -p tsconfig.test.json",
    "test": "npm run build.test && ava",
    "test.watch": "npm run build.test && ava --watch",
    "clean.test": "rimraf dist.test"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.1",
    "@types/glob": "^5.0.35",
    "ava": "^0.25.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.3",
    "fourdollar.promisify": "^1.0.5",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "parcel-bundler": "^1.6.2",
    "rimraf": "^2.6.2",
    "typescript": "^2.7.2"
  },
  "dependencies": {},
  "ava": {
    "files": [
      "dist.test/**/**.spec.js"
    ]
  }
}
